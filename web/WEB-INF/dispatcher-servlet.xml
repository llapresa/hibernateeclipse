<?xml version='1.0' encoding='UTF-8' ?>
<!-- was: <?xml version="1.0" encoding="UTF-8"?> -->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.0.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.0.xsd">

    <bean class="org.springframework.web.servlet.mvc.support.ControllerClassNameHandlerMapping"/>

    <!--
    Most controllers will use the ControllerClassNameHandlerMapping above, but
    for the index controller we are using ParameterizableViewController, so we must
    define an explicit mapping for it.
    -->
    
    
    <!-- FICHERO PARA DEFINIR EL COMPORTAMIENTO DE SPRING MVc -->
    
    <!-- Captura la url que llega y en funcion del valor de la propiedad ejecuta uno u otro bean -->
    <bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
                <prop key="index.htm">indexController</prop>
                <prop key="hola.htm">holaController</prop>
                <prop key="welcome.htm">welcomeController</prop>
                <prop key="empleados.htm">empleadosController</prop>
                <prop key="puestos.htm">puestosController</prop>
                <prop key="conocimientos.htm">conocimientosController</prop>
            </props>
        </property>
    </bean>

    <!--
    The index controller.
    DEFINICION DE LOS CONTROLLERS
    index - indica cual es su vista y no hace nada (predeterminado)
    hola - la indicamos cual es el controlador
    -->
    <bean name="indexController"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController"
          p:viewName="index" />
     <!--viewName unicamente se usa cuando se usa una redireccion directa-->
    
    <bean name="holaController"
          class="com.luis.controllers.HolaMundoController" />
    
    <bean name="welcomeController"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController"
          p:viewName="welcome" />
    
    <bean name="empleadosController"
          class="com.luis.controllers.EmpleadosController" />
    
    <!--bean name="puestosController"
          class="com.luis.controllers.PuestosController" /-->
    
    <bean name="conocimientosController"
          class="com.luis.controllers.ConocimientosController" />
    
    <!-- Es el encargado de decidir como cargar las vistas
        prefix - donde se guardan las vistas
        sufix - la extension de las vistas -->
    <bean id="viewResolver"
          class="org.springframework.web.servlet.view.InternalResourceViewResolver"
          p:prefix="/WEB-INF/jsp/"
          p:suffix=".jsp" />

</beans>
